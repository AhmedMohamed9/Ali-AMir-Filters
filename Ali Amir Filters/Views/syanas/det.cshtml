@section Scripts {
    <script>
        
        function check(v,i) {
            
            var re = /^(\d{0,5}\.\d{0,2}|\d{0,5}|\.\d{0,2})$/;
            //document.getElementById('er').innerHTML = re.test(v);
            if (re.test(v) == false) {

                document.getElementById(i).disabled = true;
            }
            else {
                document.getElementById(i).disabled = false;
            }

        }

    </script>
