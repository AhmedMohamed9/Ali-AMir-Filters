@model IEnumerable<Ali_Amir_Filters.Models.accountance>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("accountance_summar", "accountances", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group col-md-5 ">
        <div class=" col-md-6">
            @Html.TextBox("dd", DateTime.Now.ToString("yyyy/MM/dd"), new { @class = "datepicker form-control" })
        </div>
        <div class=" col-md-2">
            <input type="submit" value="ملخص الارباح" class="btn btn-primary" />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.accountance_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.money)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coustmer.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.accountance_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.money)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coustmer.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(function () {
            $('.datepicker').datepicker({
                dateFormat: "yy/mm/dd",
                changeMonth: true,
                changeYear: true

            })
        });
    </script>
}
