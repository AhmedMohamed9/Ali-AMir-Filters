@model IEnumerable<Ali_Amir_Filters.Models.syana_table3_Result>

@{
    ViewBag.Title = "مواعيد الصيانه";
}

<br />
<br />
@using (Html.BeginForm("search", "syanas", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group col-md-5 ">
        <div class=" col-md-6">
            @Html.TextBox("bydate", DateTime.Now.ToString("yyyy/MM/dd"), new { @class = "datepicker form-control" })
        </div>
        <div class=" col-md-2">
            <input type="submit" value="بحث بالتاريخ" class="btn btn-primary" />
        </div>
    </div>
}

@using (Html.BeginForm("searchbyname", "syanas", FormMethod.Post))
{
    <div class="form-group col-md-5 ">
        <div class=" col-md-8">
            @Html.TextBox("name", "", new { @class = "form-control" })
        </div>
        <div class=" col-md-3">
            <input type="submit" value="بحث" class="btn btn-block btn-success" />
        </div>
    </div>
}
<br />
<br />
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<table class="table ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.date_syana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.candls)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.date_syana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_Number)
                <br />
                @Html.DisplayFor(modelItem => item.phone_Number2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.candls)
            </td>
            <td>
                @Html.ActionLink("Details", "det", new {@date=item.date_syana,@id=item.Id }, new {@class="btn btn-warning"})
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(function () {
            $('.datepicker').datepicker({
                dateFormat: "yy/mm/dd",
                changeMonth: true,
                changeYear: true

            })
        });
    </script>
}
